# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=finance_manager_db
DB_SSLMODE=disable

# Connection Pool Settings (optimized for goroutines)
# These values are optimized for concurrent operations with goroutines
DB_MAX_OPEN_CONNS=25       # Maximum concurrent connections (default: 25)
DB_MAX_IDLE_CONNS=5        # Idle connections to keep alive (default: 5)
DB_CONN_MAX_LIFETIME=30    # Connection lifetime in minutes (default: 30)
DB_CONN_MAX_IDLE_TIME=5    # Idle timeout in minutes (default: 5)

# Retry Settings
DB_MAX_RETRIES=3           # Retry attempts on connection failure (default: 3)
DB_RETRY_DELAY=5           # Delay between retries in seconds (default: 5)
DB_CONNECT_TIMEOUT=10      # Initial connection timeout in seconds (default: 10)

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost

# Application Configuration
APP_ENV=development
LOG_LEVEL=debug

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h

# PII Encryption Configuration
# Generate a random 16-byte key and encode it as base64
# Example: openssl rand -base64 16
ENCRYPTION_SECRET_KEY=your-base64-encoded-16-byte-key-here
ENCRYPTION_PEPPER=your-unique-pepper-string-here

